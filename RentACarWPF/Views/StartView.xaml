<Window x:Class="RentACarWPF.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentACarWPF.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="StartView" Height="582" Width="764">
    <Grid Background="#FF35ACBB">

        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Rental Car Service" FontSize="30" FontWeight="Bold" Grid.ColumnSpan="3" Grid.Row="0" Margin="130,20,64,20" HorizontalAlignment="Center"></TextBlock>
        <Image Source="/Images/carlogo.png" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Margin="10"/>
        <Button Background="LightCoral" Content="Filijale" FontSize="22" FontWeight="Bold" Grid.Column="0" Grid.Row="1" Margin="10" Cursor="Hand"
                Command="{Binding ViewFilijaleCommand}"/>
        <Button Background="LightCoral" Content="Vozila" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="10" Cursor="Hand"
                 Command="{Binding ViewVozilaCommand}"/>
        <Button Background="LightCoral" Content="Rezervacije" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="1" Margin="10" Cursor="Hand"
                 Command="{Binding ViewRezervacijeCommand}"/>
        <Button Background="LightCoral" Content="Klijenti" FontSize="22" FontWeight="Bold" Grid.Column="3" Grid.Row="1" Margin="10" Cursor="Hand"
                 Command="{Binding ViewKlijentiCommand}"/>
        <Button Background="LightCoral" Content="Ocene" FontSize="22" FontWeight="Bold" Grid.Column="4" Grid.Row="1" Margin="10" Cursor="Hand"
                 Command="{Binding ViewOceneCommand}"/>
        <Button Background="LightCoral" Content="Gradovi" FontSize="22" FontWeight="Bold" Grid.Column="0" Grid.Row="2" Margin="10" Cursor="Hand"
                 Command="{Binding ViewGradoviCommand}"/>
        <Button Background="LightCoral" Content="Servisi" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="2" Margin="10" Cursor="Hand"
                 Command="{Binding ViewServisiCommand}"/>
        <Button Background="LightCoral" Content="Zaposleni" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="2" Margin="10" Cursor="Hand"
                 Command="{Binding ViewZaposleniCommand}"/>
        <Button Background="LightCoral" Content="Osiguranja" FontSize="22" FontWeight="Bold" Grid.Column="3" Grid.Row="2" Margin="10" Cursor="Hand"
                 Command="{Binding ViewOsiguranjaCommand}"/>
        <Button Background="LightCoral" Content="Agenti" FontSize="22" FontWeight="Bold" Grid.Column="4" Grid.Row="2" Margin="10" Cursor="Hand"
                 Command="{Binding ViewAgentiCommand}"/>
        <Button Background="LightCoral" Content="Serviseri" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="3" Margin="10" Cursor="Hand"
                 Command="{Binding ViewServiseriCommand}"/>
        <Button Background="LightCoral" Content="Funkcije" FontSize="22" FontWeight="Bold" Grid.Column="3" Grid.Row="3" Margin="10" Cursor="Hand"
                 Command="{Binding ViewFunkcijeCommand}"/>

    </Grid>
</Window>
